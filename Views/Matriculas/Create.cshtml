@model EXAMEN_PARCIAL.Models.Matricula

@{
    ViewData["Title"] = "Inscripción al Curso";
}

<h1>Inscripción al Curso</h1>

<h4>Confirmar Inscripción</h4>
<hr />

@if (Model.Curso != null)
{
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">@Model.Curso.Nombre</h5>
                    <h6 class="card-subtitle mb-2 text-muted">@Model.Curso.Codigo</h6>
                    <p class="card-text">
                        <strong>Créditos:</strong> @Model.Curso.Creditos<br />
                        <strong>Cupo:</strong> @Model.Curso.CupoMaximo estudiantes<br />
                        <strong>Horario:</strong> @Model.Curso.HorarioInicio.ToString(@"hh\:mm") - @Model.Curso.HorarioFin.ToString(@"hh\:mm")
                    </p>
                </div>
            </div>

            <form asp-action="Create" class="mt-3">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="CursoId" />

                <div class="form-group">
                    <input type="submit" value="Confirmar Inscripción" class="btn btn-primary" />
                    <a href="@Url.Action("Details", "Cursos", new { id = Model.CursoId })" class="btn btn-secondary">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
}
else
{
    <div class="alert alert-danger">
        Curso no encontrado.
    </div>
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}